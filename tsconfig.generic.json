{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "declaration": true,
    "isolatedModules": true
    //    "declarationMap": true
  },
  "exclude": [
    "src/templates"
  ]
}