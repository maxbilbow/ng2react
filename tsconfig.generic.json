{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "dist/lib",
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    //    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "src/templates"
  ]
}