{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "declarationDir": "dist/types",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    //    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
//    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist/esm"
  },
  "exclude": [
    "src/templates"
  ]
}